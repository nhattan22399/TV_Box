<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vla"
    tools:context=".fragment.HotFragment">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="23\n05\n2022"></TextView>
            <ImageView
                android:src="@drawable/top"
                android:layout_width="match_parent"
                android:layout_height="180dp"></ImageView>
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt.name"
            android:textSize="20dp"
            android:text="Top Gun 2"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: "></TextView>
            <TextView
                android:text="8.8"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vote"></TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="21\n05\n2022"></TextView>
            <ImageView
                android:src="@drawable/shark"
                android:layout_width="match_parent"
                android:layout_height="180dp"></ImageView>
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Mồi Cá Mập"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: "></TextView>
            <TextView
                android:text="7.5"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></TextView>

        </LinearLayout>
    </LinearLayout>




</FrameLayout>