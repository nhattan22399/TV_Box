<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/vla"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img.thumbnail"
        android:layout_width="125dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="4dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/tv.percent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="8dp"
        android:text="text"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@id/img.thumbnail"
        app:layout_constraintTop_toTopOf="@id/img.thumbnail"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imgpercent"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pa"
        app:layout_constraintBottom_toBottomOf="@+id/img.thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img.thumbnail"
        app:layout_constraintVertical_bias="0.444"
        app:riv_corner_radius="6dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>